---
import Hero from "../components/Hero.astro"
import BaseLayout from "../layouts/BaseLayout.astro"
import FeatureCard from "../components/FeatureCard.astro"
import DesignSvg from "../components/icons/DesignSvg.astro"
import AutomationSvg from "../components/icons/AutomationSvg.astro"
import SupportSvg from "../components/icons/SupportSvg.astro"
import AboutSvg from "../components/icons/AboutSvg.astro"


const serviceCardDetails = [
  { 
    title: "Web Design & Branding", 
    description: "Clean, modern websites that reflect your business.", 
    icon: DesignSvg, 
  },
  { title: "Automation Essentials", 
    description: "Forms, emails, bookings, social posts — all automated.", 
    icon: AutomationSvg, 
  },
  { title: "Support & Growth", 
    description: "Chatbots, e-commerce basics, and ongoing help.", 
    icon: SupportSvg, 
  },
]

const projectsCardDetails = [
  {
    title: "Local Business Automation Suite",
    description:
      "A practical automation system designed for small service businesses. Handles bookings, reminders, and customer follow-ups to save hours each week and reduce admin stress.",
  },
  {
    title: "E-commerce Product Builder Prototype",
    description:
      "A modular product-customisation interface built for boutique retailers. Focuses on clarity, speed, and a premium shopping experience with dynamic previews.",
  },
  {
    title: "Small Business Website Redesign Concept",
    description:
      "A clean, modern, mobile-first website concept for a fictional Bradford business. Demonstrates how thoughtful design and clear messaging can elevate a local brand.",
  },
  {
    title: "Automated Booking & Email Follow-Up Flow",
    description:
      "A streamlined booking journey paired with automated confirmation and follow-up emails. Built to show how simple workflows can improve customer experience and increase conversions.",
  },
];

---

<BaseLayout title="Pennine Digital">

  <section>
    <Hero/>
  </section>

  <section class="bg-gradient-soft w-full">

    <div class="max-w-6xl text-center px-6 py-28 mx-auto">
      <h2 class="font-heading text-3xl mb-3">Websites that work smarter for your business</h2>
      <p class="text-lg">Helping Bradford and West Yorkshire businesses get online with clean design and practical automation.</p>

      <div class="mt-12 mb-12 md:flex gap-6">
        {serviceCardDetails.map((item)=> (
          <div class="flex-1 mx-auto mb-6">
          <FeatureCard key={item.title} {...item} variant="services"/>
          </div>
        ))}
      </div>
      <a href="/" class="w-max border-2 border-accent rounded-lg px-4 py-2">Explore Services</a>
    </div>

  </section>

  <section class="bg-gradient-dark text-center">

    <div class="max-w-6xl text-center px-6 py-28 mx-auto h-full">
      <h2 class="font-heading text-3xl mb-3 text-light">Recent Demo Projects</h2>
      <p class="text-lg text-light">I’m building a set of automation demos…</p>

      <div class="mt-12 mb-12 md:grid grid-cols-2 gap-6 items-stretch">
        {projectsCardDetails.map((item)=> (
          <div class="mx-auto mb-6">
          <FeatureCard key={item.title} {...item} variant="projects"/>
          </div>
        ))}
      </div>
      <a href="/" class="text-light w-max border-2 border-accent rounded-lg px-4 py-2">View Projects</a>
    </div>

  </section>

  <section class="bg-gradient-soft/60">

    <div class="max-w-6xl px-6 py-28 flex flex-col items-center justify-evenly gap-12 lg:flex-row text-center lg:text-left text-balance">
      <div class="max-w-md lg:max-w-lg">
        <h2 class="font-heading text-3xl mb-8">A friendly, local partner for your website</h2>
        <p>I’m Chris — a front‑end developer based in West Yorkshire who cares about building websites that feel honest, approachable, and genuinely useful. I work with small businesses who want something simple and trustworthy, without the jargon or the pressure. My focus is on clean design, thoughtful details, and practical automation that quietly makes everyday work easier.</p>
      </div>
      <AboutSvg/>
    </div>
    <div class="flex justify-center">
      <a href="/" class="text-dark w-max border-2 border-accent rounded-lg px-4 py-2">More About Me</a>
    </div>

  </section>
</BaseLayout>
