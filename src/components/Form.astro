---

<form 
  name="contact" 
  method="POST"
  data-netlify="true" 
  class="mt-8 md:max-w-xl px-6 mx-auto py-12 rounded-3xl border border-dark/5"
>
  <fieldset class="space-y-6">

    <div class="form-label-div">
      <label for="name">Name</label>
      <input 
        type="text" 
        name="name"
        id="name"
        aria-required="true"
        required 
        autocomplete="name"
        class="form-input"
      />
    </div>

    <div class="form-label-div">
      <label for="email">Email</label>
      <input 
        type="email"
        name="email"
        id="email"
        aria-required="true"
        required
        autocomplete="email"
        class="form-input"
      />
    </div>

    <div class="form-label-div">
      <label for="message">Tell me about your project</label>
      <textarea 
        rows="5"
        name="message"
        id="message"
        required
        aria-required="true"
        class="form-input"
      />
    </div>    
  </fieldset>
  

  <fieldset class="mt-6">
    <legend>Budget range</legend>

    <ul class="mt-3 space-y-2">
      <li>
        <input
          type="radio"
          id="budget-500"
          name="budget"
          value="under-500"
          class="check-box"
        >
        <label for="budget-500">Under £500</label>
      </li>

      <li>
        <input
          type="radio"
          id="budget-1k"
          name="budget"
          value="500-1000"
          class="check-box"
        >
        <label for="budget-1k">£500 – £1,000</label>
      </li>

      <li>
        <input
          type="radio"
          id="budget-2k"
          name="budget"
          value="1000-2000"
          class="check-box"
        >
        <label for="budget-2k">£1,000 – £2,000</label>
      </li>

      <li>
        <input
          type="radio"
          id="budget-5k"
          name="budget"
          value="2000-5000"
          class="check-box"
        >
        <label for="budget-5k">£2,000 – £5,000</label>
      </li>

      <li>
        <input
          type="radio"
          id="budget-5kplus"
          name="budget"
          value="5000-plus"
          class="check-box"
        >
        <label for="budget-5kplus">£5,000+</label>
      </li>
    </ul>
  </fieldset>

    <button 
    type="submit"
    class="block mx-auto w-max rounded-lg mt-10 px-4 py-2 font-medium text-light bg-primary hover:opacity-90"
    >
    Send message
    </button>

    <p class="text-dark/50 text-sm text-center mt-4">
      Your details are safe and will only be used to reply to your message. 
    </p>
  
</form>