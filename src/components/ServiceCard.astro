---
const { title, description, listHeader, list } = Astro.props;
---

<section class="p-6 rounded-lg bg-light shadow-lg space-y-4">
  <header class="space-y-2">
    <h3 class="text-xl font-semibold text-dark">
      {title}
    </h3>
    <p class="text-sm text-dark/80 leading-relaxed">
      {description}
    </p>
  </header>

  <div class="space-y-2">
    <p class="text-xs font-semibold uppercase tracking-wide text-dark/70">
      {listHeader}
    </p>
    <ul class="pl-4 space-y-1 text-sm text-dark/70 list-disc">
      {list.map((item) => <li class="leading-relaxed">{item}</li>)}
    </ul>
  </div>
</section>
